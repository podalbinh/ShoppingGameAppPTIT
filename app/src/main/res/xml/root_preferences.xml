<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/languages_header"
        app:icon="@drawable/ic_translate">

        <ListPreference
            app:defaultValue="english"
            app:entries="@array/languages_entries"
            app:entryValues="@array/languages_values"
            app:key="language"
            app:title="@string/language_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/theme_header"
        app:icon="@drawable/ic_theme_light_dark">

        <SwitchPreferenceCompat
            app:key="dark_theme"
            app:title="@string/theme_title" />


    </PreferenceCategory>

</PreferenceScreen>